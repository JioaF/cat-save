extends ./components/layout

block content
	if authorized
		a(href="/logout", class="btn btn-danger") Logout
		div(class="containter p-4")
			div(class="mt-4")
				h1(class="d-inline me-4") List of cat images
		div(class="container d-flex flex-row mt-4 gap-4 flex-wrap justify-content-center")
			each id in catId
				div(class="text-center border p-3 d-flex flex-column")
					img(src=`https://cataas.com/c/${id}`, width="150", height="150", class="rounded")
					a(href=`/save?id=${id}`, class="w-100 btn btn-info mt-2 text-light") Save
	else
		.container.text-center.border.p-4
			h1 Find and save your favorable cat images
				div(class="mt-4")
					img(src="/images/placeholder.png", alt="")
					img(src="/images/placeholder.png", alt="")
					img(src="/images/placeholder.png", alt="")
				p(class="mt-4")
					a(href="/login", class="btn btn-info w-50") Login